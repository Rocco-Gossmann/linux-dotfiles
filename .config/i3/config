bindsym $modMain+space exec --no-startup-id rofi -show run
bindsym $modMain+period exec --no-startup-id rofi-emoji-picker

# change focus
bindsym $modMain+h focus left
bindsym $modMain+j focus down
bindsym $modMain+k focus up
bindsym $modMain+l focus right

# alternatively, you can use the cursor keys:
bindsym $modMain+Left focus left
bindsym $modMain+Down focus down
bindsym $modMain+Up focus up
bindsym $modMain+Right focus right

# move focused window
bindsym $modMain+Shift+h move left
bindsym $modMain+Shift+j move down
bindsym $modMain+Shift+k move up
bindsym $modMain+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $modMain+Shift+Left move left
bindsym $modMain+Shift+Down move down
bindsym $modMain+Shift+Up move up
bindsym $modMain+Shift+Right move right

# split in horizontal orientation  ( i  aka I aka |-lookalike)
bindsym $modMain+i split h

# split in vertical orientation ( - )
bindsym $modMain+minus split v

# enter fullscreen mode for the focused container
bindsym $modMain+f fullscreen toggle
bindsym $modMain+p sticky toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $modMain+s layout stacking
bindsym $modMain+w layout tabbed
bindsym $modMain+e layout toggle split

# toggle tiling / floating
