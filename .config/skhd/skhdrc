################################################################################
# App launchers
################################################################################
lcmd + lctrl - r : yabai --restart-service    && skhd --restart-service
lcmd + lctrl - t : open -a iTerm
lcmd + lctrl - e : open -a "System settings"

################################################################################
# cmd = manipulate windows
################################################################################
