################################################################################
# alt = manipulate workspaces
################################################################################
# Window on desktop manipulation
# alt - s : yabai -m window --toggle sticky                    # show on all desktops
# alt - t : yabai -m window --toggle topmost                   # always on top

# j/k (down / up) == focus next/ screen
# lalt - j : yabai -m display --focus next
# lalt - k : yabai -m display --focus prev

# (Alt + CMD) move window to display
# lalt + lshift - j : yabai -m window --display next; yabai -m display --focus next;
# lalt + lshift - k : yabai -m window --display prev; yabai -m display --focus prev;
# lalt + lshift - l : yabai -m window --space next; yabai -m space --focus next;
# lalt + lshift - h : yabai -m window --space prev; yabai -m space --focus prev;

# lalt - l : yabai -m space --focus next;
# lalt - h : yabai -m space --focus prev;


